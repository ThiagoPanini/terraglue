{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3GlueGetDataSource",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::terraglue-sor-data-*",
                "arn:aws:s3:::terraglue-sor-data-*/*"
            ]
        },
        {
            "Sid": "S3GlueDataTarget",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::terraglue-sot-data-*",
                "arn:aws:s3:::terraglue-sot-data-*/*"
            ]
        },
        {
            "Sid": "S3GlueEncryption",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "kms:DescribeKey"
            ],
            "Resource": "*"
        }
    ]
}